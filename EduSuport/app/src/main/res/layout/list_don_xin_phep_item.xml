<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layoutXPItem"
    android:orientation="vertical"
    android:background="@drawable/background_subject_excellent_score"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvTenHSXP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Hoàng Công Thiện"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txvTGXP"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/3/2024"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/txvTrangThaiXP"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Trạng thái: Đã đồng ý"
            android:textStyle="italic"/>
    </LinearLayout>


</LinearLayout>