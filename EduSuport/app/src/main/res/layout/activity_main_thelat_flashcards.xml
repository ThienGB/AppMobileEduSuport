<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            >
            <ImageButton
                android:id="@+id/back_TaiLieuMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/back_icon"
                android:scaleType="fitCenter"
                android:background="@drawable/button_background"
                />
            <TextView
                android:id="@+id/tenNhomThe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Flashcard: 300 BÀI CODE PHỤ HUYNH" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_moreOptFlashCard"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:src="@drawable/more3dot" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/them1TheMoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm thẻ mới" />

        <Button
            android:id="@+id/themNhieuTheMoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm hàng loạt" />

    </LinearLayout>
    <ListView
        android:id="@+id/lvTheLats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>