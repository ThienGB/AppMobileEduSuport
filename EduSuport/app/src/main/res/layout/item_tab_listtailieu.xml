<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
   >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"

        android:scaleType="centerCrop"
        android:src="@drawable/icon_word" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tailieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài liệu học tập cực vip..."
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/date_dangtailieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload day 24/03/2003"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_moreOptTaiLieuFile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/fullbutton_background"
        android:scaleType="fitCenter"
        android:src="@drawable/more3dot" />
</RelativeLayout>