<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"

    android:background="@drawable/bg_login"
    tools:context=".activity.RegisterAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_margin="20dp"
        android:background="#41FFFFFF"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:gravity="center"
            android:textColor="@color/main_darkest_blue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Tạo tài khoản giáo viên mới"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:textSize="15dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Email"
            android:padding="10dp"
            app:startIconDrawable="@drawable/img_id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/fullbutton_background"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Mật khẩu"
            android:padding="10dp"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/img_pass">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/fullbutton_background"/>

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Đã có tài khoản ? "/>
            <TextView
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@color/main_blue"
                android:text="Đăng nhập ngay"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnDK"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="Đăng kí bằng Gmail"
            android:textSize="15dp"
            android:backgroundTint="@color/main_darker_blue"
            />


    </LinearLayout>
</LinearLayout>