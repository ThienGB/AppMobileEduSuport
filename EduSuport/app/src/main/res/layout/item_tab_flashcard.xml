<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/flashcard_background"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/btn_moreOptFlashCard"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:src="@drawable/flashcard" />

        <TextView
            android:id="@+id/nameNhomThe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="FlashCard Vip"
            android:textSize="14dp"
            android:textStyle="bold"
            style="@style/textColor"/>

        <TextView
            android:id="@+id/soluongThe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23 cards"
            android:textSize="10dp"
            style="@style/textColor"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_moreOptFlashCard"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/fullbutton_background"
        android:scaleType="fitCenter"
        android:src="@drawable/more3dot" />

</RelativeLayout>