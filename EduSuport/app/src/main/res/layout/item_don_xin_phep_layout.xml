<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white_mid_emp"
    android:layout_marginBottom="20dp"
    android:outlineAmbientShadowColor="@color/black_high_emp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerInParent= "true"
        android:layout_width= "40dp"
        android:layout_height= "40dp"
        android:layout_gravity="center"
        android:src="@drawable/ava" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/txvTenNguoiXinPhep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Công Thiện"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txvThoiGianXP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:textAlignment="textEnd"
            android:textColor="@color/black_high_emp"
            android:text="15/3"
            android:textSize="15dp"
            android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black_high_emp"
            android:text="Đơn xin phép"
            android:textSize="13dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txvLyDoXinPhep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black_high_emp"
            android:text="Hiện tại tôi đã thấy giáo viên có thái độ cư xử không đúng"
            android:textSize="10dp"
            />
    </LinearLayout>
</LinearLayout>