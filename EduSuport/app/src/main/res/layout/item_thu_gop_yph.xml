<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ava"
        android:layout_width= "40dp"
        android:layout_height= "40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ava"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/ava"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tailieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phụ huynh em Trịnh Thu Phương"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_dangtailieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload day 24/03/2003"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_moreOptTaiLieuFile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/fullbutton_background"
        android:scaleType="fitCenter"
        android:src="@drawable/more3dot" />
</RelativeLayout>