<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/background_subject_average_score"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ava"
        android:layout_width= "40dp"
        android:layout_height= "40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ava"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/ava"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvTieuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá thái độ của giáo viên"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvthoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload day 24/03/2003"
            android:textSize="10dp" />

    </LinearLayout>
</RelativeLayout>