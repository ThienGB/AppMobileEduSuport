                android:layout_height="50dp"
                android:src="@drawable/sartuday"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="T2"/>
        </LinearLayout>

