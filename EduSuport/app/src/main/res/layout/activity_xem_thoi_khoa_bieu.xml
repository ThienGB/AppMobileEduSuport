<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/white"
        tools:context=".activity.XemThoiKhoaBieuActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            >
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_icon"
                android:scaleType="fitCenter"
                android:background="@drawable/button_background"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Xem thời khóa biểu" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white_mid_emp"
            android:outlineAmbientShadowColor="@color/black_high_emp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerInParent= "true"
                android:layout_width= "40dp"
                android:layout_height= "40dp"
                android:src="@drawable/ava"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/black_high_emp"
                    android:text="Xin chào !"
                    android:textSize="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Học sinh Công Thiện"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnT2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/monday"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="T2"/>
            <ImageButton
                android:id="@+id/btnT3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tuesday"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="T2"/>
            <ImageButton
                android:id="@+id/btnT4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/wednesday"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="T2"/>
            <ImageButton
                android:id="@+id/btnT5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/thursday"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="T2"/>
            <ImageButton
                android:id="@+id/btnT6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/friday"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="T2"/>
            <ImageButton
